<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/jsp/decorators">
    <decorator name="main" page="template.jsp">
        <pattern>/*</pattern>
    </decorator>

    <decorator name="login">
        <pattern>/login</pattern>
    </decorator>

    <decorator name="recuperar">
        <pattern>/login/recuperar</pattern>
    </decorator>

    <decorator name="trocarSenha">
        <pattern>/login/trocarSenha</pattern>
    </decorator>

    <decorator name="redirect">
        <pattern>/index.jsp</pattern>
    </decorator>
</decorators>
